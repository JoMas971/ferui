{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@ferui/icons": ["src/ferui-icons"],
      "@ferui/icons/shapes/*": ["src/ferui-icons/shapes", "src/ferui-icons/shapes/*"],
      "@ferui/components": ["src/ferui-components"]
    },
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules/**", "dist/**"]
}
